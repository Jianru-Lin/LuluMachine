	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-target='#navbar' aria-expanded='false', aria-controls='navbar')
					span.src-only
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#').icon
					img(src='icon.png')
				a.navbar-brand(href='#').name Tokenizer
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href='#') 编辑 Edit
					li
						a(href='#') 实验 Try
				ul.nav.navbar-nav.navbar-right
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown') 了解更多 More
						ul.dropdown-menu
							li
								a(href='#') 社区 Community ...
							li
								a(href='#') 参考文档 Document ...
							li
								a(href='#') 项目源码 Github ...
							li.divider
							li
